<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="500dp"
        android:layout_height="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvState"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textSize="35sp"
            android:gravity="center"
            android:text="状態中"
            android:textColor="@color/white"
            android:background="@drawable/ic_round_edge_blue"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/user_status"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:singleLine="true"
            android:hint="備考"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_marginStart="80dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            />
        <TextView
            android:id="@+id/set_user_status"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:text="更新"
            android:background="@drawable/ic_round_edge_blue"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>


    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="未登録場所"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center|right"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvLatitude"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="43542542345"
            android:textColor="@color/black"
            android:gravity="center|right"
            />

        <TextView
            android:id="@+id/tvLongitude"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="67868657846"
            android:textColor="@color/black"
            android:gravity="center|right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/user_location"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:hint="自宅、カフェ、事務所等"
            android:textSize="12sp"
            android:singleLine="true"
            android:layout_marginStart="80dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            />
        <TextView
            android:id="@+id/set_user_location"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:text="地名登録"
            android:background="@drawable/ic_round_edge_blue"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_and_close"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="キャンセル"
            android:textSize="18sp"
            android:gravity="center"
            />
    </LinearLayout>

    <TableLayout
        android:layout_width="500dp"
        android:layout_height="30dp"/>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/report_title"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="日報追加"
            android:textSize="20dp"
            android:textColor="#222"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/label_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="プロジェクト名"
            android:textSize="14dp"
            android:textColor="#555"
            app:layout_constraintTop_toBottomOf="@+id/report_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/project_code"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/project_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="選択する"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/label_project"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/label_wbs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="作業コード"
            android:textSize="14sp"
            android:textColor="#555"
            app:layout_constraintTop_toBottomOf="@+id/project_picker"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wbs_code"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/wbs_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="選択する"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/label_wbs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/worktime_layout"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/wbs_picker">
                <TextView
                    android:id="@+id/label_worktime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="工数"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btn_worktime"
                    app:layout_constraintBaseline_toBaselineOf="@+id/btn_worktime"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_worktime"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn_worktime"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="選択する"
                    android:textSize="14dp"
                    app:layout_constraintHorizontal_weight="1.5"
                    app:layout_constraintLeft_toRightOf="@+id/label_worktime"
                    app:layout_constraintRight_toLeftOf="@+id/label_place"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/label_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="作業場所"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/btn_worktime"
                    app:layout_constraintRight_toLeftOf="@+id/et_place"
                    app:layout_constraintBaseline_toBaselineOf="@+id/et_place"/>

                <EditText
                    android:id="@+id/et_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:singleLine="true"
                    android:inputType="text"
                    app:layout_constraintHorizontal_weight="1.5"
                    app:layout_constraintLeft_toRightOf="@+id/label_place"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/label_region"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="時間帯"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_starttime"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toLeftOf="@id/tv_starttime"
            app:layout_constraintRight_toLeftOf="@+id/btn_starttime"
            app:layout_constraintTop_toBottomOf="@+id/worktime_layout" />

        <Button
            android:id="@+id/btn_starttime"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="選択する"
            android:textSize="14dp"
            app:layout_constraintHorizontal_weight="8"
            app:layout_constraintLeft_toRightOf="@+id/label_region"
            app:layout_constraintRight_toLeftOf="@+id/label_line"
            app:layout_constraintTop_toBottomOf="@+id/worktime_layout" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_starttime"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/label_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="〜"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_starttime"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/btn_starttime"
            app:layout_constraintTop_toBottomOf="@+id/worktime_layout" />

        <Button
            android:id="@+id/btn_endtime"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="選択する"
            android:textSize="14dp"
            app:layout_constraintHorizontal_weight="8"
            app:layout_constraintLeft_toRightOf="@+id/label_line"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/worktime_layout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_endtime"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/label_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="作業報告"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_region"/>

        <EditText
            android:id="@+id/et_workDetail"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_edittext"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:selectAllOnFocus="true"
            android:gravity="top"
            android:maxLines="10"
            android:singleLine="false"
            android:padding="5dp"
            android:layout_margin="16dp"
            android:scrollHorizontally="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_report"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="登録する"
            android:textSize="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_workDetail"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.report.ReportDetailActivity"
    android:background="#E8E8E8">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:gravity="center|bottom"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#DDDFDFDF"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/returnHome"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center"
                app:srcCompat="?attr/homeAsUpIndicator" />
            <TextView
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="日報"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text=""
                />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--内容-->
            <LinearLayout
                android:id="@+id/record_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
        <!--        date-->
                <TextView
                    android:id="@+id/record_date"
                    android:background="@drawable/ic_round_edge_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="#000000"/>
        <!--        予定：-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#60AAAAAA"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center|left"
                        android:text="予定："
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/appointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center|left"
                        android:text="予定："
                        android:textColor="#000000"/>
                </LinearLayout>


    <!--            planworklist-->
                <LinearLayout
                    android:id="@+id/planworklist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"/>

                <!--線-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:gravity="center"
                    android:background="#9F9F9F"
                    android:orientation="horizontal">
                </LinearLayout>

        <!--        実績：-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#60AAAAAA"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center|left"
                        android:text="実績："
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/worktime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center|left"
                        android:text="実績："
                        android:textColor="#000000"/>
                </LinearLayout>


        <!--        content -->
                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="vertical">
                </LinearLayout>

                <!--            reportlist-->
                <LinearLayout
                    android:id="@+id/reportlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>



                <!--                add button-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/ic_round_edge_grey"
                        android:padding="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/addView"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:background="#FFFFFF"
                            app:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="追加する"
                            android:textSize="18sp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                </LinearLayout>


                <!--            commentlist-->
                <LinearLayout
                    android:id="@+id/commentlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"/>
        <!--線-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="vertical"/>
            </LinearLayout>
            <!--内容-->

            <!--bottom-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
            </LinearLayout>
            <!--bottom-->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center|bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#DDDFDFDF"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/message_edit"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/white"
                android:ems="50"
                android:inputType="textPersonName"/>

            <Button
                android:id="@+id/message_send"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:text="送信"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>